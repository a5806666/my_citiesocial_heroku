<div class="columns nested-fields" data-new-record="<%=form.object.new_record?%>">
  <div class="column is-6">
    <div class="field">
      <%= form.text_field :spec, placeholder: '規格', class: 'input' %>
    </div>
  </div>
  <div class="column is-2">
    <div class="field">
      <%= form.number_field :quantity, placeholder: '数量', class: 'input' %>
    </div>
  </div>
  <div class="column is-1">
    <div class="field">
      <%= link_to '削除', '#', class: 'button is-danger', data: {action: 'product-form#remove_sku' } %>
    </div>
  </div>
  <%= form.hidden_field :_destroy %>
</div>