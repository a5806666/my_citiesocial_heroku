<h1 class="title">商品一覧</h1>

<%= link_to '商品追加', new_admin_product_path, class: 'button is-dark' %>
<hr>
<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>商品名前</th>
      <th>メーカー</th>
      <th>定価 / 販売価格</th>
      <th>販売状況</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product|  %>
      <tr>
        <td><%= link_to "#{product.name} [商品編號：#{product.code}]", edit_admin_product_path(product) %></td>
        <td><%= product.vendor.title %></td>
        <td><%= product.list_price %> / <%= product.sell_price %></td>
        <td><%= product.on_sell %></td>
        <td>
          <%= link_to "編集", edit_admin_product_path(product), class: 'button is-light is-small' %>
          <%= link_to "削除", admin_product_path(product), method: 'delete', data: { confirm: '削除しますか?!'}, class: 'button is-danger is-small' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>