<h1 class="title">メーカーリスト</h1>
<%= link_to 'メーカー追加', new_admin_vendor_path, class: 'button is-dark' %>
<hr>
<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>名前</th>
      <th>説明</th>
      <th>状態</th>
      <th>更新日時</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @vendors.each do |vendor| %>
    <tr>
      <td><%= link_to vendor.title, edit_admin_vendor_path(vendor) %></td>
      <td><%= strip_tags(vendor.description).truncate(50) %></td>
      <td><%= vendor.online %></td>
      <td><%= vendor.updated_at %></td>
      <td>
        <%= link_to "編集", edit_admin_vendor_path(vendor), class: 'button is-light is-small' %>
        <%= link_to "削除", admin_vendor_path(vendor), method: :delete, data: {confirm: '削除しますか?!'}, class: 'button is-danger is-small' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>