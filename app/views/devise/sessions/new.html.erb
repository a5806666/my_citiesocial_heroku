<section class="container is-fluid">
  <div class="columns">

    <div class="column is-9">
      <%= image_pack_tag 'welcome.jpeg' %>
    </div>

    <div class="column is-3">

      <h2 class='title'>ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :email, 'Eメール',  class: 'label' %>
          <div class="control has-icons-left">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>  
        </div>

        <div class="field">
          <%= f.label :password, 'パスワード', class: 'label' %>
          <div class="control has-icons-left">
            <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'ログイン状態を保存する' %>
          </div>
        <% end %>

        <p class="buttons">
          <%= f.submit "ログイン", class: 'button is-primary is-medium' %>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "新規登録", new_registration_path(resource_name),class: 'button is-outlined is-medium' %><br />
          <% end %>
        </p>

      <% end %>
      <%= render "devise/shared/links" %>
    </div>

  </div>
</section>